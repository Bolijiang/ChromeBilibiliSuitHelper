{
    "name": "BiliSuitHelper",
    "description": "Web端装扮工具",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": [
        "tabs", 
        "downloads",
        "storage",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "js": [
                "content/utils.js",
                "content/request.js", 
                "content/content.js"
            ],
            "matches": [
                "*://*.bilibili.com/*"
            ]
        }
    ],
    "options_page": "options/options.html",
    "action": {
        "default_popup": "action/popup.html",
        "default_title": "玉玉了",
        "default_icon": "icons/popup.png"
    },
    "homepage_url": "https://github.com/lllk140/ChromeBilibiliSuitHelper",
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    }
}