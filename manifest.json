{
    "name": "BiliSuitHelper",
    "description": "Web端装扮工具",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": [
        "tabs", 
        "downloads",
        "storage",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "js": [
                "content/utils.js",
                "content/request.js", 
                "content/content.js"
            ],
            "matches": [
                "*://*.bilibili.com/*"
            ]
        }
    ],
    "options_page": "options/options.html",
    "action": {
        "default_popup": "action/popup.html"
    }
}